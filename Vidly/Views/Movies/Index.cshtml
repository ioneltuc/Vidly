@model IEnumerable<Movie>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<p>
    @Html.ActionLink("New movie", 
        "New", 
        "Movies", 
        null, 
        new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <tr>
        <th>Movies</th>
        <th>Genre</th>
    </tr>
    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(
                    @movie.Name,
                    "Edit",
                    "Movies",
                    new { id = movie.Id }
                    )
            </td>
            <td>@movie.Genre</td>
        </tr>
    }
</table>